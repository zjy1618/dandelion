<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.0.xsd" >

    <description>Spring 配置</description>

    <!-- 使用annotation 自动注册bean, 并保证@Required、@Autowired的属性被注入 -->
    <context:component-scan base-package="com.zjy.dandelion">
        <context:exclude-filter type="regex" expression="com.zjy.dandelion.api.controller.*"/>
    </context:component-scan>

    <context:component-scan base-package="com.zjy.dandelion.service.core.impl">
    	<context:include-filter type="regex" expression=".impl.*Impl"/>
    </context:component-scan>
    <context:component-scan base-package="com.zjy.dandelion.dao.mapper">
        <context:include-filter type="regex" expression=".*Mapper"/>
    </context:component-scan>
</beans>